{
    "name": "asset-management-system",
    "version": 2,
    "builds": [
                {
                    "src": "client/package.json",
                    "use": "@now/static-build",
                    "config": { "distDir": "build"}
                },
                {
                    "src": "server/server.js",
                    "use": "@now/node-server",
                    "config": { "distDir": "server/server.js"}
                }
            ],
    "routes": [
                    { "handle": "filesystem" },
                    { "src": "/.*", "dest": "client/index.html" }
            ]
}